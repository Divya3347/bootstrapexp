<% if flash[:notice].present? %>
  <div class="alert alert-success"><%= flash[:notice]%></div>
<% end %>
<% if flash[:updatee].present? %>
  <div class="alert alert-primary"><%= flash[:updatee]%></div>
<% end %>
<% if flash[:deletee].present? %>
  <div class="alert alert-danger"><%= flash[:deletee]%></div>
<% end %>
<div class="navbar">
<p class="nav-item h1">Books World</p>
<%= link_to "New Book" , new_book_path , class:"btn btn-primary nav-item"%>
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">
  Click Me!
</button>
<%# <button type="button" class="btn btn-primary" data-bs-toggle="tooltip" title="Hooray!">Hover over me!</button> %>
<%= search_form_for @q do |f|%>
    <%= f.search_field :name_or_author_cont ,placeholder:"Search", style:"height:35px"%>
    <%= f.submit  class:"btn btn-primary" %>
<% end %>
</div>
<table class="table table-bordered table-hover text-center table-light">
    <tr>
        <th><%= sort_link(@q , :name) %></th>
        <th><%= sort_link(@q , :author) %></th>
        <th><%= sort_link(@q , :price) %></th>
        <th><%= sort_link(@q , :quantity) %></th>
        <th> Image </th>
    <tr>
  <% @books.each do |book|%>
    <tr class="align-middle">
       <td class="col-4"> <%= link_to book.name , book %></td>
       <td class="col-4"> <%= book.author %></td>
       <td class="col-2"> <%= book.price %></td>
       <td class="col-2"> <%= book.quantity %></td>
       <td><%= image_tag book.avatars.first , size:"100x50" if book.avatars.present?%>
    </tr>
  <% end %>
</table>

<div class="pagination justify-content-center">
    <%= paginate @books %>
</div>

